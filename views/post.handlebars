<button class="btn btn-primary" id="newPost" data-toggle="modal" data-target="#newPostModal">Start a New
  Conversation</button>
{{#each post}}
<div class="card">
  <div class="card-header">
    Title: {{header}}
  </div>
  <div class="body">
    {{corntent}}
  </div>
</div>
{{/each}}
{{#if comments}}
{{>comments}}
{{else}}
<div class="card">
  <div class="card-header">There are no comments for this post!</div>
  <!--Inserts the userName and createdAt time in the card title-->
  <div class="card-body">Does no one give a husk!?</div>
  <!--Inserts the comments content-->
</div>
{{/if}}
</div>

<div class="modal" id="newPostModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Create new Post</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="logInUserName">Title</label>
            <input type="text" class="form-control col-10" id="newPostTitle" aria-describedby="newPostTitle"
              placeholder="Enter Post Title">
          </div>
          <div class="form-group">
            <label for="logInPassword">Password</label>
            <textarea class="form-control" id="postContent" placeholder="Enter Post">
                    </div>
                    <p class="PostErrorMessage">One or more fields invalid</p>
                </form>
                <button class="btn btn-primary" id="submitNewPost">Submit</button>
            </div>
        </div>
    </div>
</div>