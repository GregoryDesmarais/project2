<div class="category-header text-center headingCont">
    <div class="container">
        <div class="row">
            <div class="col-sm-2 text-left followBtn">
                <button class="btn btn-secondary" id="favoriteThisCategory" data-category="{{category}}">Follow</button>
            </div>
            <div class="col-sm-8 cat-header">
                <h1 id="cat-head">c/{{category}}</h1>
            </div>
            <div class="col-sm-2 text-right magicBtn">
                <button class="btn btn-secondary" id="newPostBtn" data-category="{{category}}">New Post</button>
            </div>
        </div>
    </div>
</div>

<div class="accordion" id="accordion">
    {{#each post}}
    <div class="postWrap">
        <div class="card postHeaders">
            <div class="card-header " id="heading{{id}}">
                <h2 class="mb-0">
                    <button class="btn btn-link col-12 text-center postTitle" type="button" data-toggle="collapse"
                        data-target="#collapse{{id}}" aria-expanded="true" aria-controls="collapse{{id}}">
                        {{header}}
                    </button>
                    <br>
                </h2>
            </div>
            <div id="collapse{{id}}" class="collapse accordion-collapse" aria-labelledby="heading{{id}}"
                data-parent="#accordionExample">
                <div class="card-body">
                    {{corntent}}
                </div>
            </div>
        </div>
        <div class="commentLinkFromPost text-right col-12">
            <a class="postLink" href="/{{category}}/{{id}}"> Comments</a>
            <a id="getUserInfo{{UserId}}" class="getUserInfo postLink" href="#" name="{{UserId}}"><img
                    src="/images/alien.png"> {{userName}}</a>
        </div>
    </div>

    {{/each}}
</div>

<div class="modal" id="newPostModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <font color="#0D7788">Create New Post</font>
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="postTitle">
                            <font color="#0D7788">Title</font>
                        </label>
                        <input type="text" class="form-control col-12" rows="9" id="newPostTitle"
                            aria-describedby="userName" placeholder="Post Title">
                    </div>
                    <div class="form-group">
                        <label for="newPostContent">
                            <font color="#0D7788">Post Body</font>
                        </label>
                        <textarea class="form-control col-12 newPostTextArea" id="newPostContent"
                            placeholder="Post"></textarea>
                    </div>
                    <p class="logInErrorMessage">One or more fields invalid</p>
                </form>
                <button class="btn btn-primary" id="submitNewPostBtn">Submit</button>
            </div>
        </div>
    </div>
</div>
</div>